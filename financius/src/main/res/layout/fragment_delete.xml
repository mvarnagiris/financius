<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_large"
        android:paddingRight="@dimen/space_large"
        android:paddingTop="@dimen/space_normal">

        <TextView
            android:id="@+id/currencies_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text"
            android:visibility="gone"
            tools:text="1 currency will be deleted"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/accounts_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text"
            android:visibility="gone"
            tools:text="3 accounts will be deleted"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/categories_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text"
            android:visibility="gone"
            tools:text="2 categories will be deleted"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/transactions_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text"
            android:visibility="gone"
            tools:text="254 transactions will be deleted"
            tools:visibility="visible" />

    </LinearLayout>

    <include layout="@layout/include_edit_buttons_borderless" />

</LinearLayout>