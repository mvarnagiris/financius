<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.code44.finance.ui.common.ActiveIntervalView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="@dimen/elevation_header"
        tools:ignore="UnusedAttribute" />

    <com.code44.finance.ui.reports.categories.CategoriesReportView
        android:id="@+id/categoriesReportView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size_2x"
        android:background="?colorPrimary"
        android:elevation="@dimen/elevation_header"
        app:viewBackgroundTheme="dark"
        tools:ignore="UnusedAttribute" />

    <ListView
        android:id="@+id/listView"
        style="@style/AdapterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>