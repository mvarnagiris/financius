<resources>

    <!-- TextAppearance -->
    <!-- =========================================================================================================== -->

    <style name="Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="Text.Resize">
        <item name="android:textSize">128sp</item>
    </style>

    <style name="Text.Resize.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>


    <style name="Text.Body" />

    <style name="Text.Body.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <style name="Text.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Body2.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <style name="Text.Body.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Subhead">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Display1">
        <item name="android:textSize">@dimen/text_display1</item>
    </style>

    <style name="Text.Display1.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <style name="Text.Display2">
        <item name="android:textSize">@dimen/text_display2</item>
    </style>

    <style name="Text.Display2.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <style name="Text.Display3">
        <item name="android:textSize">@dimen/text_display3</item>
    </style>

    <style name="Text.Display3.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Display3.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <style name="Text.Display4">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_display4</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>


    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <style name="Text.Small.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="Text.XLarge">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Text.XXLarge">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="Text.Header" parent="Text.XXLarge" />

    <style name="Text.Header.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
    </style>

    <style name="Text.Caption" parent="Text.Small.Secondary" />

    <style name="Text.Edit" parent="Text">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <!-- Button -->
    <!-- =========================================================================================================== -->

    <style name="Button" parent="BaseButton">
        <item name="android:textColor">@color/text_primary_inverse</item>
    </style>

    <style name="Button.Small" parent="BaseButtonSmall">
        <item name="android:minHeight">@dimen/min_touch_size</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Borderless" parent="BaseButtonBorderless" />

    <style name="Button.Borderless.Select">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:editTextBackground</item>
    </style>

    <style name="Button.Borderless.Calc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_display1</item>
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:background">@drawable/btn_calc</item>
    </style>

    <style name="Button.Borderless.Calc.Action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/btn_calc_action</item>
    </style>

    <style name="Button.Borderless.Dialog">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_touch_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- List -->
    <!-- =========================================================================================================== -->

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ListView.NoDivider">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="ListView.NoDivider.NoSelector">
        <item name="android:listSelector">#0000</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/keyline</item>
        <item name="android:paddingRight">@dimen/keyline</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:minHeight">?android:actionBarSize</item>
    </style>

    <!-- ScrollView -->
    <!-- =========================================================================================================== -->

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- Separator -->
    <!-- =========================================================================================================== -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Divider.Thin">
        <item name="android:layout_height">@dimen/divider_thin</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Vertical.Thin">
        <item name="android:layout_width">@dimen/divider_thin</item>
    </style>

    <!-- Containers -->
    <!-- =========================================================================================================== -->

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.Title">
        <item name="android:paddingTop">@dimen/edit_title_padding_top</item>
        <item name="android:background">@color/bg_secondary</item>
    </style>

    <style name="Container.Edit">
        <item name="android:paddingLeft">@dimen/margin_edit_content</item>
        <item name="android:paddingRight">@dimen/margin_edit_content</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.DialogButtons">
        <item name="android:layout_marginTop">@dimen/space_xlarge</item>
        <item name="android:layout_marginBottom">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
