<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TextView -->
    <!-- =========================================================================================================== -->

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextView.Inverse">
        <item name="android:textColor">@color/text_primary_inverse</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextView.Accent">
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/font_thin</item>
    </style>

    <!-- Button -->
    <!-- =========================================================================================================== -->

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingBottom">@dimen/space_small</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <!--<item name="android:background">@drawable/btn_primary</item>-->
    </style>

    <style name="Button.Borderless">
        <item name="android:background">@drawable/btn_borderless</item>
    </style>

    <style name="Button.Borderless.Settings">
        <item name="android:minHeight">@dimen/big_touch_size</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Button.Select">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:background">@drawable/btn_borderless</item>
    </style>

    <!-- ImageView -->
    <!-- =========================================================================================================== -->

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- EditText -->
    <!-- =========================================================================================================== -->

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/font_light</item>
    </style>

    <!-- List -->
    <!-- =========================================================================================================== -->

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/btn_borderless</item>
    </style>

    <style name="ListView.NoDivider">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="ListView.NoDivider.NoSelector">
        <item name="android:listSelector">#0000</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
    </style>

    <!-- ScrollView -->
    <!-- =========================================================================================================== -->

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fillViewport">true</item>
    </style>

    <!-- Separator -->
    <!-- =========================================================================================================== -->

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Separator.Thin">
        <item name="android:layout_height">@dimen/separator_thin</item>
    </style>

    <style name="Separator.Vertical">
        <item name="android:layout_width">@dimen/separator</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Separator.Vertical.Thin">
        <item name="android:layout_width">@dimen/separator_thin</item>
    </style>

    !-- Separator -->
    <!-- =========================================================================================================== -->

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.Title">
        <item name="android:paddingLeft">@dimen/space_xxlarge</item>
        <item name="android:paddingRight">@dimen/space_xxlarge</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:background">@color/bg_secondary</item>
    </style>

    <style name="Container.Edit">
        <item name="android:paddingLeft">@dimen/space_large</item>
        <item name="android:paddingRight">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
